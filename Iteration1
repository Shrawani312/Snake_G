#include <conio.h>
#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

int width = 20, height = 20;
int gameover, score;
int x, y, fruitx, fruity, flag;
int tailX[100], tailY[100];
int countTail = 0;

void setup()
{
    gameover = 0;
    x = width / 2;
    y = height / 2;

label1:
    fruitx = rand() % 20;
    if (fruitx == 0)
        goto label1;
label2:
    fruity = rand() % 20;
    if (fruity == 0)
        goto label2;

    score = 0;
    countTail = 0;
}

void draw()
{
    int i, j, k, ch;
    system("cls");

    for (i = 0; i < width + 2; i++)
        printf("#");
    printf("\n");

    for (i = 0; i < height; i++)
    {
        for (j = 0; j < width; j++)
        {
            if (j == 0)
                printf("#");

            if (i == y && j == x)
                printf("O");
            else if (i == fruity && j == fruitx)
                printf("*");
            else
            {
                ch = 0;
                for (k = 0; k < countTail; k++)
                {
                    if (tailX[k] == j && tailY[k] == i)
                    {
                        printf("o");
                        ch = 1;
                    }
                }
                if (ch == 0)
                    printf(" ");
            }

            if (j == width - 1)
                printf("#");
        }
        printf("\n");
    }

    for (i = 0; i < width + 2; i++)
        printf("#");
    printf("\n");
    printf("Score = %d\n", score);
    printf("Press 'X' to quit.\n");
}

void input()
{
    if (_kbhit())
    {
        switch (_getch())
        {
        case 'a':
            flag = 1;
            break;
        case 's':
            flag = 2;
            break;
        case 'd':
            flag = 3;
            break;
        case 'w':
            flag = 4;
            break;
        case 'x':
            gameover = 1;
            break;
        }
    }
}

void logic()
{
    int prevX, prevY, prev2X, prev2Y, i;
    prevX = tailX[0];
    prevY = tailY[0];
    tailX[0] = x;
    tailY[0] = y;

    for (i = 1; i < countTail; i++)
    {
        prev2X = tailX[i];
        prev2Y = tailY[i];
        tailX[i] = prevX;
        tailY[i] = prevY;
        prevX = prev2X;
        prevY = prev2Y;
    }

    switch (flag)
    {
    case 1:
        x--;
        break;
    case 2:
        y++;
        break;
    case 3:
        x++;
        break;
    case 4:
        y--;
        break;
    default:
        break;
    }

    if (x < 0 || x > width - 1 || y < 0 || y > height - 1)
        gameover = 1;

    for (i = 0; i < countTail; i++)
    {
        if (tailX[i] == x && tailY[i] == y)
            gameover = 1;
    }

    if (x == fruitx && y == fruity)
    {
    label3:
        fruitx = rand() % 20;
        if (fruitx == 0)
            goto label3;
    label4:
        fruity = rand() % 20;
        if (fruity == 0)
            goto label4;
        score += 10;
        countTail++;
    }
}

void showGuidelines()
{
    system("cls");
    printf("=========== SNAKE GAME ===========\n");
    printf(" Developed for Quincy 2005 \n");
    printf("----------------------------------\n");
    printf("Guidelines:\n");
    printf(" 1. Use 'W' to move UP\n");
    printf(" 2. Use 'A' to move LEFT\n");
    printf(" 3. Use 'S' to move DOWN\n");
    printf(" 4. Use 'D' to move RIGHT\n");
    printf(" 5. Eat * to grow your snake\n");
    printf(" 6. Press 'X' anytime to EXIT\n");
    printf("----------------------------------\n");
    printf("Press any key to START the game...\n");
    getch();
}

int main()
{
    char choice;
    do
    {
        showGuidelines();
        setup();
        while (!gameover)
        {
            draw();
            input();
            logic();

            int m, n;
            for (m = 0; m < 10000; m++)
            {
                for (n = 0; n < 10000; n++)
                {
                }
            }
        }

        system("cls");
        printf("=========== GAME OVER ===========\n");
        printf("Your final score: %d\n", score);
        printf("---------------------------------\n");
        printf("Do you want to play again? (Y/N): ");
        choice = getch();
        choice = tolower(choice);
    } while (choice == 'y');

    system("cls");
    printf("Thank you for playing Snake Game!\n");
    printf("Goodbye!\n");
    return 0;
}
